{
  "authentication": {
    "class": "solr.MultiAuthPlugin",
    "schemes": [

      {
        "scheme": "bearer",
        "class": "solr.JWTAuthPlugin",
        "blockUnknown": "true",
        "realm": "Chorus Solr Cluster"
        "scope": "openid",
        "issuers":[
          {
            "name": "keycloak",
            "wellKnownUrl": "http://keycloak:9080/auth/realms/chorus/.well-known/openid-configuration",
            "clientId": "solr"
          }
        ]
      },
      {
        "scheme": "basic",
        "class": "solr.BasicAuthPlugin",
        "blockUnknown": "true",
        "realm": "Chorus Solr Cluster. Admin Credentials are solr:SolrRocks",
        "credentials": {
          "solr": "IV0EHq1OnNrj6gvRCwvFwTrZ1+z1oBbnQdiVC3otuq0= Ndd7LKvVBAaZIF0QAVi1ekCfAJXr1GGfLtRUXhgrF8c="
        },
        "forwardCredentials": false
      }
    ]
  },
  "authorization": {
    "class": "solr.MultiAuthRuleBasedAuthorizationPlugin",
    "schemes": [
      {
        "scheme": "basic",
        "class": "solr.RuleBasedAuthorizationPlugin",
        "user-role": {
          "solr": "admin"
        }
      },
      {
        "scheme": "bearer",
        "class": "solr.ExternalRoleRuleBasedAuthorizationPlugin"
      }
    ],
    "permissions": [
      {
        "name": "security-edit",
        "role": ["admin", "solr-admin"]
      },
      {
        "name": "security-read",
        "role": ["admin", "solr-admin"]
      },
      {
        "comment": "This doesn't seem to work anymore under MultiAuthPlugin"
        "name": "anonymous",
        "role": null,
        "collection": ["ecommerce"],
        "path": ["/select"],
        "method": ["GET", "POST"],
      },
      {
        "name": "all",
        "role": ["admin", "solr-admin"]
      }
    ]
  }
}
