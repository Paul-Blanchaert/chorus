{
  "authentication": {
    "class": "solr.JWTAuthPlugin",
    "realm": "myrealm",
    "blockUnknown": true,
    "requireIss": true,
    "requireExp": true,
    "principalClaim": "sub",
    "adminUiScope": "solr:admin",
    "scope": "solr:read solr:write solr:admin",
    "algWhitelist": ["RS256", "RS384", "RS512"],
    "issuers": [
      {
        "name": "keycloak",
        "jwksUrl": "http://keycloak:9080/auth/realms/myrealm/protocol/openid-connect/certs",
        "authorizationEndpoint": "http://keycloak:9080/auth/realms/myrealm/protocol/openid-connect/auth",
        "clientId": "myclient",
        "iss": "http://keycloak:9080/auth/realms/myrealm"
      }
    ]
  },
  "authorization": {
    "class": "solr.ExternalRoleRuleBasedAuthorizationPlugin",
    "permissions": [
      {
      "name": "all",      "role": "solr:admin",
      "name": "update",   "role": "solr:write"
      }
    ]
  }
}
